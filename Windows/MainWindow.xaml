<Window x:Class="XMLReader.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XMLReader"
        mc:Ignorable="d"
        Title="XML Reader" Height="450" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="30" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid Grid.Row="0" Margin="12, 6">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="100" />
			</Grid.ColumnDefinitions>
			<TextBox Grid.Column="0" Margin="10, 0" Text="{Binding XMLPath}" />
			<Button Grid.Column="1" Click="Button_Click" >選擇檔案</Button>
		</Grid>
		<Grid  Grid.Row="1" Margin="12, 6">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="6*" />
				<ColumnDefinition Width="4*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="24" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<Label Grid.Column="0" Grid.Row="0">XML 結構:</Label>
			<TreeView Grid.Column="0" Grid.Row="1" Margin="5, 0" />
			<Label Grid.Column="1" Grid.Row="0">Log</Label>
			<RichTextBox Grid.Column="1" Grid.Row="1"  Margin="5, 0"  />
		</Grid>
	</Grid>
</Window>
